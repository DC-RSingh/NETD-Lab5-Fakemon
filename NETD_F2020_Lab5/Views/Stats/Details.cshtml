@model NETD_F2020_Lab5.Models.Stats

@{
    ViewData["Title"] = "Details";
}

<!-- Display Name of Current Fakemon -->
<h1>Stat Details of @Html.DisplayFor(model => model.Fakemon.Name)</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Fakemon.Name) Stats</h4>
    <hr />
    <dl class="row">
        <!-- Generate Description List with Fakemon Stat Information-->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HitPoints)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HitPoints)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Attack)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Attack)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Defense)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Defense)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SpecialAttack)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SpecialAttack)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SpecialDefense)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SpecialDefense)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Speed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Speed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fakemon)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fakemon.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.StatsId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
